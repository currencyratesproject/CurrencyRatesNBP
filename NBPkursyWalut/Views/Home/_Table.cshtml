<div id="ratesTable">
    @using (Ajax.BeginForm("Currency", "Home", new AjaxOptions() { UpdateTargetId = "ratesTable", HttpMethod = "Post", InsertionMode = InsertionMode.Replace, OnComplete = "loadChart" }))
    {


        <div>
            @Html.Label("Change the date range")
            <br />
            <span>From: </span> @Html.DropDownList("From", new SelectList(ViewBag.DatesAsc), new { id = "min" })<span> To: </span> @Html.DropDownList("To", new SelectList(ViewBag.DatesDsc), new { id = "max" }) <input type="submit" value="Submit" />
            @Html.ValidationMessage("To")
        </div>
        <br />

    }

    @if (ViewBag.Code != null)
    {
        <style>
            table {
                text-align: center;
                width: 100%;
            }

            td {
                text-align: center;
                font-size: 16px;
            }
            th {
                text-align: center;
                font-size:18px;
                
            }
        </style>

        <table class="table-striped table-bordered table-hover">

            @if (ViewBag.Code != null)
            {
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Currency rate</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {


                        <tr>
                            <td>@item.Date.ToString("yyyy-MM-dd")</td>
                            <td>@item.Average.ToString("F4")</td>
                        </tr>

                    }
                </tbody>
            }

        </table>



    }
    else
    {
        <h2>There is no information about this currency</h2>
    }
</div>





